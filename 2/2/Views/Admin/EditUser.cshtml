@model _2.Models.ApplicationUser

@{
    ViewData["Title"] = "Редагування";
}

<main>
    <div class="edit-profile-container">
        <h2>Редагувати користувача</h2>

        <form asp-action="EditUser" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="FirstName">Ім'я</label>
                <input asp-for="FirstName" class="form-control" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Прізвище</label>
                <input asp-for="LastName" class="form-control" required />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Зберегти зміни</button>
        </form>

        <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Ви впевнені, що хочете видалити цього користувача?');">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Видалити користувача</button>
        </form>

        <a asp-action="ManageUsers" class="btn btn-secondary mt-3">Назад до списку користувачів</a>
    </div>
</main>

