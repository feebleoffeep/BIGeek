@model IEnumerable<_2.Models.ApplicationUser>

@{
    ViewData["Title"] = "Список користувачів";
}
<div class="header-container">
    <div class="back-button">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Повернутися назад</a>
    </div>
    <h2 class="title">Керування користувачами</h2>

    <!-- Search Form -->
    <!-- Search Form -->
    <form asp-action="ManageUsers" method="get" class="search-form">
        <input type="text" name="searchTerm" placeholder="Пошук користувача" value="@ViewData["SearchTerm"]" class="search-input" />
        <button type="submit" class="btn btn-search">Шукати</button>
        <a href="@Url.Action("ManageUsers", new { searchTerm = "" })" class="btn btn-reset">Скинути</a>
    </form>

</div>

    <table>
        <thead>
            <tr>
                <th>Ім'я</th>
                <th>Прізвище</th>
                <th>Email</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id">Редагувати</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
<style>
    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .back-button {
        text-align: left;
    }

        .back-button a {
            background-color: #ff3333; 
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

            .back-button a:hover {
                background-color: #cc0000; 
            }

    .title {
        text-align: center;
        flex-grow: 1;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    td a:hover {
        text-decoration: underline;
    }

    a {
        color: #0066cc;
        text-decoration: none;
    }
    /* Search form */
    .search-form {
        margin-bottom: 20px;
    }

    .search-input {
        padding: 10px;
        width: 200px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
    .btn-search {
        background-color: #f53e3e;
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        margin-left: 10px;
    }

        .btn-search:hover {
            background-color: #d43b2f;
        }
    .btn-reset {
        background-color: #007bff; /* Блакитний колір */
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        margin-left: 10px;
        text-decoration: none; /* Убрати підкреслення */
    }

        .btn-reset:hover {
            background-color: #0056b3; /* Темніший блакитний при наведенні */
        }

</style>
