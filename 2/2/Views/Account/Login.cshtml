@model _2.Models.LoginViewModel
@inject IHttpContextAccessor HttpContextAccessor

@{
    // Визначення мови
    var language = HttpContextAccessor.HttpContext?.Request.Cookies["Language"] ?? "uk";

    // Динамічний текст
    var pageTitle = language == "uk" ? "Вхід" : "Login";
    var emailLabel = language == "uk" ? "Електронна пошта" : "Email";
    var passwordLabel = language == "uk" ? "Пароль" : "Password";
    var loginButtonText = language == "uk" ? "Увійти" : "Log In";
    var registerLinkText = language == "uk" ? "Ще немає акаунту? Зареєструйтесь." : "Don't have an account? Register.";

    ViewData["Title"] = pageTitle;
}

<main>
    <div class="login-form-container">
        <h1>@pageTitle</h1>

        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="form-group">
                <label for="Email">@emailLabel</label>
                <input asp-for="Email" class="form-control" id="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password">@passwordLabel</label>
                <input asp-for="Password" class="form-control" id="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@loginButtonText</button>
        </form>

        <div>
            <a asp-action="Register">@registerLinkText</a>
        </div>
    </div>
</main>

<style>
    .login-form-container form {
        max-width: 380px;
        margin: 20px auto;
        background-color: #ffffff;
        padding: 30px 25px;
        border-radius: 10px;
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
    }

    .login-form-container h1 {
        font-family: Arial, sans-serif;
        font-size: 26px;
        font-weight: 700;
        color: #ff4a4a;
        text-align: center;
        margin-bottom: 25px;
    }

    .search-form-container {
        display: flex;
        align-items: center;
        margin: 0 50px;
    }

    .login-form-container .form-control {
        margin-bottom: 15px;
        padding: 10px;
        font-size: 16px;
        color: #333;
        border: 1px solid #ddd;
        border-radius: 5px;
        width: 100%;
        transition: border-color 0.3s ease;
    }

        .login-form-container .form-control:focus {
            border-color: #ff4a4a;
            box-shadow: 0 0 5px rgba(255, 74, 74, 0.2);
            outline: none;
        }

    .login-form-container .btn-primary {
        background-color: #ff4a4a;
        border: none;
        padding: 12px;
        font-size: 17px;
        font-weight: bold;
        border-radius: 5px;
        width: 100%;
        cursor: pointer;
        color: #fff;
        transition: background-color 0.3s ease;
    }

        .login-form-container .btn-primary:hover {
            background-color: #ff6666;
        }

    .login-form-container .text-danger {
        font-size: 13px;
        color: #e74c3c;
    }

    .login-form-container a {
        color: #ff4a4a;
        text-decoration: none;
        font-size: 14px;
        display: block;
        text-align: center;
        margin-top: 15px;
    }

        .login-form-container a:hover {
            text-decoration: underline;
        }
</style>

