@model ProfileViewModel
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = HttpContextAccessor.HttpContext?.Request.Cookies["Language"] == "uk" ? "Мій профіль" : "My Profile";

    var language = HttpContextAccessor.HttpContext?.Request.Cookies["Language"] ?? "uk";

    var profileTitle = language == "uk" ? "Мій профіль" : "My Profile";
    var firstNameText = language == "uk" ? "Ім'я:" : "First Name:";
    var lastNameText = language == "uk" ? "Прізвище:" : "Last Name:";
    var emailText = language == "uk" ? "Email:" : "Email:";
    var editProfileText = language == "uk" ? "Редагувати профіль" : "Edit Profile";
}

<main>
    <div class="profile-container">
        <h2>@profileTitle</h2>

        <div class="profile-info">
            <p><strong>@firstNameText</strong> @Model.FirstName</p>
            <p><strong>@lastNameText</strong> @Model.LastName</p>
            <p><strong>@emailText</strong> @Model.Email</p>
        </div>

        <div>
            <a asp-controller="Account" asp-action="EditProfile" class="btn-link">@editProfileText</a>
        </div>
    </div>
</main>

<style>
    .profile-container {
        max-width: 380px;
        margin: 20px auto;
        background-color: #ffffff;
        padding: 30px 25px;
        border-radius: 10px;
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
    }

        .profile-container h2 {
            font-family: Arial, sans-serif;
            font-size: 26px;
            font-weight: 700;
            color: #ff4a4a;
            text-align: center;
            margin-bottom: 25px;
        }

    .profile-info p {
        font-size: 16px;
        color: #333;
        margin-bottom: 10px;
    }

    .profile-info strong {
        color: #ff4a4a;
    }

    .profile-container .btn-link {
        color: #ff4a4a;
        text-decoration: none;
        font-size: 16px;
        display: block;
        text-align: center;
        margin-top: 15px;
    }

        .profile-container .btn-link:hover {
            text-decoration: none;
        }
</style>






