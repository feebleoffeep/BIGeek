@model _2.Models.DeliveryMethod

@{
    ViewData["Title"] = "Додати нову доставку";
}

<h2>Додати нову доставку</h2>

<form asp-action="CreateDeliveryMethod" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Додати доставку</button>
    <a asp-action="ManageDeliveryMethod" class="btn btn-secondary">Повернутися назад</a>
</form>


