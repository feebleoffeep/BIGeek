@model IEnumerable<_2.Models.Product>

@{
    ViewData["Title"] = "Список продукції";
}

<div class="header-container">
    <div class="back-button">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Повернутися назад</a>
    </div>
    <h2 class="title">Керування продукцією</h2>

    <a href="@Url.Action("CreateProduct", "Product")" class="btn btn-success">Додати товар</a>

    <form asp-action="ManageProducts" method="get" class="search-form">
        <input type="text" name="searchTerm" placeholder="Пошук за назвою товару" value="@ViewData["SearchTerm"]" class="search-input" />
        <button type="submit" class="btn btn-search">Шукати</button>
    </form>
</div>

@if (!Model.Any())
{
    <p>Немає жодних продуктів, що відповідають критеріям пошуку. Додайте перший продукт:</p>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Найменування</th>
            <th>Опис</th>
            <th>ImageUrl</th>
            <th>Ціна</th>
            <th>Категорія</th>
            <th>Альтернативна назва</th>
            <th>Діагональ екрану</th>
            <th>Колір</th>
            <th>Процесор</th>
            <th>Обсяг пам'яті (ГБ)</th>
            <th>Обсяг накопичувача (ГБ)</th>
            <th>Відеокарта</th>
            <th>Ємність батареї</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.ImageUrl"</td> 
                <td>@product.Price</td>
                <td>@product.Category?.Name</td>
                <td>@product.AlternativeNames</td> 
                <td>@product.ScreenDiagonal</td>   
                <td>@product.Color</td>            
                <td>@product.Processor</td>
                <td>@product.RamSize</td>
                <td>@product.StorageSize</td>
                <td>@product.GraphicsType</td>
                <td>@product.BatteryCapacity</td>
                <td>
                    <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@product.Id">Редагувати</a>
                </td>
            </tr>
        }
    </tbody>

</table>

}
<style>
    .header-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
        padding: 10px;
    }

        .header-container .back-button {
            margin-right: auto;
        }

        .header-container h2.title {
            font-size: 26px;
            font-weight: 700;
            color: #ff4a4a;
            text-align: center;
        }

        .header-container .btn {
            font-size: 15px;
            padding: 10px 15px;
            margin: 0 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            cursor: pointer;
            text-decoration: none;
        }

        .header-container .btn-primary {
            background-color: #ff4a4a;
            color: #fff;
        }

            .header-container .btn-primary:hover {
                background-color: #ff6666;
            }

        .header-container .btn-success {
            background-color: #28a745;
            color: #fff;
        }

            .header-container .btn-success:hover {
                background-color: #218838;
            }

        .header-container .search-form {
            display: flex;
            align-items: center;
        }

        .header-container .search-input {
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            width: 200px;
            margin-right: 8px;
        }

        .header-container .btn-search {
            background-color: #007bff;
            color: #fff;
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .header-container .btn-search:hover {
                background-color: #0056b3;
            }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        overflow-x: auto;
    }

        .table th, .table td {
            padding: 12px 8px;
            text-align: left;
            font-size: 14px;
            color: #333;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f8f9fa;
            font-weight: bold;
            color: #555;
        }

        .table td {
            background-color: #fff;
        }

        .table tr:hover td {
            background-color: #f1f1f1;
        }

        .table .actions a {
            text-decoration: none;
            color: #007bff;
            font-weight: 500;
            margin-right: 10px;
        }

            .table .actions a:hover {
                color: #0056b3;
            }

    .no-products-message {
        font-size: 16px;
        color: #666;
        text-align: center;
        margin-top: 20px;
    }

</style>
