@model _2.Models.Product

@{
    ViewData["Title"] = "Додати новий продукт";
}

<h2>Додати новий продукт</h2>

<form asp-action="CreateProduct" method="post">
    <div class="form-group">
        <label for="Name">Назва продукту</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Опис</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ImageUrl">URL зображення</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Price">Ціна</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Додати продукт</button>
    <a asp-action="ManageProducts" class="btn btn-secondary">Повернутися назад</a>
</form>



