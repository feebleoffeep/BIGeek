@model Order

@{
    ViewData["Title"] = "BIGeek";
}

<div class="container">
    <h3>Деталі замовлення #@Model.Id</h3>

    <p><strong>Ім'я користувача:</strong> @Model.FirstName @Model.LastName</p>
    <p><strong>Дата замовлення:</strong> @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
    <p><strong>Статус:</strong> @Model.OrderStatus.Name</p>
    <p><strong>Метод доставки:</strong> @Model.DeliveryMethod.Name</p>
    <p><strong>Ціна доставки:</strong> @Model.DeliveryPrice</p>
    <p><strong>Час доставки:</strong> @Model.DeliveryTime</p>

    <h4>Товари в замовленні:</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Назва товару</th>
                <th>Ціна</th>
                <th>Кількість</th>
                <th>Загальна ціна</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.OrderStatus.Name != "Відхилено")
    {
        @if (!User.IsInRole("Admin"))
        {
            <form asp-action="CancelOrder" asp-controller="Order" method="post">
                <input type="hidden" name="orderId" value="@Model.Id" />
                <button type="submit" class="button">Скасувати замовлення</button>
            </form>
        }
        else
        {
            @* Кнопка для підтвердження замовлення (тільки для адміністраторів) *@
            @if (Model.OrderStatus.Name != "Підтверджено")
            {
                <form asp-action="ConfirmOrder" asp-controller="Order" method="post">
                    <input type="hidden" name="orderId" value="@Model.Id" />
                    <button type="submit" class="button" style="background-color: #28a745; border-color: #28a745;">Підтвердити замовлення</button>
                </form>
            }
        }
    }
</div>

<style>
    .container {
        max-width: 900px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    h3 {
        color: #ff3333;
        font-size: 2em;
        border-bottom: 2px solid #ff3333;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    h4 {
        font-size: 1.5em;
        color: #333;
        margin-top: 30px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .table th, .table td {
        padding: 12px;
        border: 1px solid #ddd;
        text-align: left;
    }

    .table th {
        background-color: #ff3333;
        color: white;
        font-weight: bold;
    }

    .table td {
        background-color: #fff;
    }

    .button {
        display: inline-block;
        padding: 12px 20px;
        color: #fff;
        background-color: #ff3333;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        text-align: center;
        margin-top: 20px;
    }

        .button:hover {
            background-color: #cc0000;
        }

        .button:active {
            background-color: #990000;
        }
</style>


