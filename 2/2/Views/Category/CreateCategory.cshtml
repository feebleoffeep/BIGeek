@model _2.Models.Category
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Додати нову категорію";

    var language = HttpContextAccessor.HttpContext?.Request.Cookies["Language"] ?? "uk";

    var titleText = language == "uk" ? "Додати нову категорію" : "Add New Category";
    var nameLabelText = language == "uk" ? "Назва" : "Name";
    var addButtonText = language == "uk" ? "Додати категорію" : "Add Category";
    var backButtonText = language == "uk" ? "Повернутися назад" : "Go Back";
}

<h2>@titleText</h2>

<form asp-action="CreateCategory" method="post">
    <div class="form-group">
        <label asp-for="Name">@nameLabelText</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@addButtonText</button>
    <a asp-action="ManageCategories" class="btn btn-secondary">@backButtonText</a>
</form>



